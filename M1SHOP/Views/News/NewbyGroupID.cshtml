@model IEnumerable<Models.EF.M1Content>
@{
    Layout = "~/Views/Shared/ProductList.cshtml";
}
<style>
    .well {
        background: #ffffff;
    }

    .media-object {
        max-width: 150px !important;
    }
</style>
<div id="archive-product" class="col-xs-12 col-md-9">
    @*<div class="category-desc">
        </div>*@
    <div class="archive-border">
        <!----------------------------------------->
        @foreach (var m in Model)
        {
            <div class="container">
                <div class="well">
                    <div class="media">
                        <a class="pull-left" href="/noi-dung/@m.SeoTitle-@m.ID">
                            <img class="media-object" src="/Images/News/@m.Image">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading"><a href="/noi-dung/@m.SeoTitle-@m.ID">@m.Name.ToUpper()</a></h4>
                            @*<p class="text-right">By Francisco</p>*@
                            <p>
                                @Html.Raw(m.Description)
                            </p>
                            <ul class="list-inline list-unstyled">
                                <li><span><i class="fa fa-calendar"></i>@Html.FormatValue(m.CreatedDate, "{0:dd/MM/yyyy}")</span></li>
                                @*<li>|</li>
                                    <span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
                                    <li>|</li>
                                    <li>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star-empty"></span>
                                    </li>*@
                                @*<li>|</li>*@
                                @*<li>
                                        <span><i class="fa fa-facebook-square"></i></span>
                                        <span><i class="fa fa-twitter-square"></i></span>
                                        <span><i class="fa fa-google-plus-square"></i></span>
                                    </li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!---------------------------------------------------------------------------------------->
        @*<div class="toolbar tb-bottom row" style="text-align:center;">
            </div>*@

    </div>
</div>