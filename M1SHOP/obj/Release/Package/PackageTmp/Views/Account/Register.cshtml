@model Models.EF.M1Custumers
@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/LayoutHeader.cshtml";
}
<style>
    .box__header {
        border-bottom: 1px solid #d2d2d2;
        padding: 14px 20px;
    }

    .box__title {
        display: inline-block;
        margin: 0;
        color: #000000;
        font-size: 15px;
        font-weight: 500;
        line-height: 22px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> <h3 class="panel-title text-center" style="font-weight:bold;font-size:16px;">ĐĂNG KÝ LÀM THÀNH VIÊN</h3> </div>
                <div class="panel-body">
                    <!--------------------------------------------------------->

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row col-md-6">
                            <div class="form-group">
                                <label>Tên đăng nhập<font color="red"><b>*</b></font></label>
                                <div>
                                    @Html.TextBoxFor(m=>m.UserName, null, new { @class = "form-control", placeholder = "Tên đăng nhập", required = true })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu<font color="red"><b>*</b></font></label>
                                <div>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Mật khẩu", required = true } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu<font color="red"><b>*</b></font></label>
                                <div>
                                    @Html.TextBox("MatkhauNhaplai", null, new { @class = "form-control", placeholder = "Nhật lại mật khẩu", type = "password", required = true })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ Email</label>
                                <div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: abcxya@gmail.com" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col col-md-6">


                            <div class="form-group">
                                Họ tên thành viên<font color="red"><b>*</b></font>
                                <div>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ tên thành viên", required = true } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Điện thoại liên hệ<font color="red"><b>*</b></font>
                                <div>
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Điện thoại liên hệ", required = true } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Địa chỉ", htmlAttributes: new { @class = "" })
                                <div>
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa chỉ của bạn ?" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @*<div class="form-group">
                                @Html.Label("Tỉnh/Thành phố", htmlAttributes: new { @class = "" })
                                <div>
                                    @Html.DropDownList("idTinhthanh", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idTinhthanh, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="ĐĂNG KÝ THÀNH VIÊN" class="btn btn-lg btn-success" />
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

