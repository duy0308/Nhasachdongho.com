@model IEnumerable<Models.EF.M1ProductCategory>

@{
    ViewBag.Title = "Quản lý nhóm mặt hàng";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<h4>Quản lý nhóm mặt hàng</h4>
<div class="collapse navbar-collapse bs-example-js-navbar-collapse">
    <ul class="nav navbar-nav">
        <li class="dropdown open">
            <a href="#" class="dropdown-toggle btn-success" id="drop1" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> Hiện thị theo Level <span class="caret"></span> </a>
            <ul class="dropdown-menu" aria-labelledby="drop1">
                <li><a href="/ProductCategory/lv1">Level 1</a></li>
                <li><a href="/ProductCategory/lv2">Level 2</a></li>
                <li><a href="/ProductCategory/lv3">Level 3</a></li>
                <li><a href="/ProductCategory/lv4">Level 4</a></li>
                <li><a href="/ProductCategory/lv5">Level 5</a></li>
            </ul>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle btn-info" id="drop2" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Hiển thị theo trạng thái <span class="caret"></span> </a>
            <ul class="dropdown-menu" aria-labelledby="drop2">
                <li><a href="/ProductCategory/showhome">Hiển thị trang chủ</a></li>
                <li><a href="/ProductCategory/noshowhome">Không hiển thị trang chủ</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/ProductCategory/active">Hiển thị website</a></li>
                <li><a href="/ProductCategory/noactive">Không hiển thị website</a></li>
            </ul>
        </li>
    </ul> 
</div>
<hr />
<table id="example" class="mdl-data-table" cellspacing="0" width="100%">
    <thead>
        <tr>

            <th>
                Tên nhóm mặt hàng
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.ParentID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                Thứ tự hiển thị
            </th>

            <th>
                Hiện lên web
            </th>
            <th>
                Hiện trang chủ
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @{
                        int lv = item.Level ?? 0;
                        if (lv == 2)
                        {
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        }
                        else if (lv == 3)
                        {
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        }
                        else if (lv == 4)
                        {
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        }
                        else if (lv == 5)
                        {
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="glyphicon glyphicon-chevron-right"></span>
                                                <span class="glyphicon glyphicon-chevron-right"></span>
                        }
                    }
                    @Html.DisplayFor(modelItem => item.NameWEB)
                </td>

                @*<td>
                          @Html.DisplayFor(modelItem => item.ParentID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowOnHome)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                </td>
            </tr>
                        }
    </tbody>
</table>
