@model IEnumerable<Models.EF.M1OrderDetail>
@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = null;
}

<div class="panel panel-primary" style="margin:5px;">
    <div class="panel-heading"> <h3 class="panel-title">THÔNG TIN CHI TIẾT ĐƠN ĐẶT HÀNG</h3> </div>
    <div class="panel-body">
        <!--------------------------------------------------------------------------------------------->
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>STT</th>
                    <th>Mã Mặt hàng</th>
                    <th>Tên Mặt hàng</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th></th>
                </tr>
            </tbody>
            @{
                var i = 0;
            }
            @foreach (var m in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@m.Code</td>
                    <td>@m.Name</td>
                    <td>@m.Quantity</td>
                    <td>@m.UnitPrice</td>
                    <td></td>

                </tr>
            }
        </table>
    </div>
</div>        