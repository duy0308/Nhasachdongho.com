@model Models.EF.M1Footer
@{
    ViewBag.Title = "Logo";
}
@using (Html.BeginForm())
{
    <div class="container" style="margin-top:20px">
        <div><h3>THÔNG TIN LOGO</h3></div>
        <hr />
       
            <div class="row">
                <label for="logo">1. Logo chính</label>
                <div class="col-md-12">
                    <img src="@ViewBag.Logo" width="20%" />
                    <input type="text" value="@ViewBag.Logo" class="form-control" required="" id="logo" name="logo" maxlength="200"/>
                </div>
            </div>
            <div class="row">
                <label for="logo">2. Logo dành cho di động</label>
                
                <div class="col-md-12">
                    <img src="@ViewBag.LogoMobi" width="20%" />
                    <input type="text" value="@ViewBag.LogoMobi" class="form-control" required="" id="logomobi" name="logomobi" maxlength="200"/>
                </div>
            </div>
            <div class="row">
                <label for="logo">
                    <br />
                    Lưu ý: Link logo có dạng http://kiembac.com/upload/tenhinhanh.jpg
                </label>

            
            </div>
       
        <div class="col-md-3 pull-right" style="margin-top:20px">
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-block btn-success" />
        </div>
    </div>
}