@model Models.EF.M1ProductCategory

@{
    ViewBag.Title = "Quản lý loại mặt hàng";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <h4>Cập nhật thông tin Loại mặt hàng:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.Image)
        @Html.HiddenFor(model => model.ParentID)
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.Path)
        @Html.HiddenFor(model => model.Level)
        <div class="row">
                <div class="col-md-3">Tên hiển thị trên web:</div>

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.NameWEB, new { @class = "form-control", id="name" })
                    @Html.ValidationMessageFor(model => model.NameWEB, "", new { @class = "text-danger" })
                </div>
        </div>

        

        <div class="row">
            <div class="col-md-3"> DisplayOrder: Thứ tự hiển thị</div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.DisplayOrder, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"> Descriptions: Giới thiệu tóm tắt</div>
        <div class="col-md-9">
            @Html.TextAreaFor(model => model.Descriptions,new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.Descriptions, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="row">
            <div class="col-md-3">Ghi chú</div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })

            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-3">MetaTitle: Tên hiển thị share Facebook</div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="row">
        <div class="col-md-3"> SeoTitle: Tên liên kết muốn hiển thị:</div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.SeoTitle, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
        </div>
    </div>
   
        <div class="row">
            <div class="col-md-3"> Keywords: Từ khoá </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">Descriptions: Giới thiệu tóm tắt loại mặt hàng share Facebook</div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.MetaDescriptions, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.MetaDescriptions, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="row">
            <div class="col-md-3">Các thẻ Tag dành cho SEO</div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Tags,  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" }) 
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">Kích hoạt trạng thái hoạt động</div>
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
            
        </div>
        <div class="row">
            <div class="col-md-3">Cho hiển thị trên Website</div>
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.ShowOnHome)
                @Html.ValidationMessageFor(model => model.ShowOnHome, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group" style="margin-top:20px">
                <div class="col-md-offset-2 col-md-9">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
   </div>
}

<div>
    @Html.ActionLink("Back to List", "Loaimathang")
</div>
